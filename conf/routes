# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Mobile methods
POST    /v1/mobile/authorize            controllers.mobile.AuthenticationController.authorize()
POST    /v1/mobile/logoff               controllers.mobile.AuthenticationController.logoff()
POST    /v1/mobile/user/register        controllers.mobile.UserController.register()
POST    /v1/mobile/user/exclude         controllers.mobile.UserController.exclude()
POST    /v1/mobile/social/signUp        controllers.mobile.SocialController.signUp()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
