# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Mobile methods
POST    /v1/mobile/authorize            controllers.mobile.AuthenticationController.authorize()
POST    /v1/mobile/logoff               controllers.mobile.AuthenticationController.logoff()
POST    /v1/mobile/recoveryPassword     controllers.mobile.AuthenticationController.recoveryPassword()
POST    /v1/mobile/user/register        controllers.mobile.UserController.register()
POST    /v1/mobile/user/exclude         controllers.mobile.UserController.exclude()
POST    /v1/mobile/user/search          controllers.mobile.UserController.search()
POST    /v1/mobile/social/signUp        controllers.mobile.SocialController.signUp()
POST    /v1/mobile/wishlist/create      controllers.mobile.WishilistController.create()
POST    /v1/mobile/wishlist/update      controllers.mobile.WishilistController.update()
POST    /v1/mobile/wishlist/reload      controllers.mobile.WishilistController.reload()
POST    /v1/mobile/wishlist/delete      controllers.mobile.WishilistController.delete()
POST    /v1/mobile/wishlist/addProduct      controllers.mobile.WishilistController.addProductWishList()
POST    /v1/mobile/wishlist/removeProduct      controllers.mobile.WishilistController.removeProductWishList()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
