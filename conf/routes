# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)

# Mobile methods
POST    /v1/mobile/authorize                    controllers.mobile.AuthenticationController.authorize()
POST    /v1/mobile/logoff                       controllers.mobile.AuthenticationController.logoff()
POST    /v1/mobile/recoveryPassword             controllers.mobile.AuthenticationController.recoveryPassword()
POST    /v1/mobile/user/register                controllers.mobile.UserController.register()
POST    /v1/mobile/user/update                  controllers.mobile.UserController.update()
POST    /v1/mobile/user/exclude                 controllers.mobile.UserController.exclude()
POST    /v1/mobile/user/search                  controllers.mobile.UserController.search()
POST    /v1/mobile/user/contacts                controllers.mobile.UserController.analyzeContacts()
POST    /v1/mobile/social/signUp                controllers.mobile.SocialController.signUp()
POST    /v1/mobile/social/link                  controllers.mobile.SocialController.link()
POST    /v1/mobile/wishlist/create              controllers.mobile.WishListController.create()
POST    /v1/mobile/wishlist/update              controllers.mobile.WishListController.update()
POST    /v1/mobile/wishlist/list                controllers.mobile.WishListController.list()
POST    /v1/mobile/wishlist/delete              controllers.mobile.WishListController.delete()
POST    /v1/mobile/wishlist/product/list        controllers.mobile.WishListController.products()
POST    /v1/mobile/wishlist/product/save        controllers.mobile.WishListController.productsSave()
POST    /v1/mobile/cdn/retrieve                 controllers.mobile.CDNController.retrieve()
POST    /v1/mobile/notification/register        controllers.mobile.NotificationController.register()
POST    /v1/mobile/notification/list            controllers.mobile.NotificationController.listActions()
POST    /v1/mobile/user/list                    controllers.mobile.UserController.list()
POST    /v1/mobile/user/circle/join             controllers.mobile.UserController.joinCircle()
POST    /v1/mobile/user/circle/leave            controllers.mobile.UserController.leaveCircle()
POST    /v1/mobile/user/circle/list             controllers.mobile.UserController.listCircle()
POST    /v1/mobile/user/circle/mark             controllers.mobile.UserController.listUserFromCircle()
POST    /v1/mobile/action/comment               controllers.mobile.ActionController.comment()
POST    /v1/mobile/action/listComments          controllers.mobile.ActionController.listComments()
POST    /v1/mobile/action/want                  controllers.mobile.ActionController.want()
POST    /v1/mobile/action/report                controllers.mobile.ActionController.report()
POST    /v1/mobile/action/toggleBlock           controllers.mobile.ActionController.toggleBlock()
POST    /v1/mobile/action/share                 controllers.mobile.ActionController.share()
POST    /v1/mobile/action/feeds                 controllers.mobile.ActionController.feeds()
POST    /v1/mobile/manufacturer/list            controllers.mobile.ManufacturerController.list()

# Web methods
GET     /                                       controllers.AbstractApplication.index()
GET     /v1/about                               controllers.AbstractApplication.about()
GET     /v1/web/user/recoveryPassword           controllers.web.UserController.showRecoveryPassword(h:String ?= "0", m:String ?= "0")
POST    /v1/web/recoveryPassword                controllers.web.UserController.startRecoveryPassword()
POST    /v1/web/user/recoveryPassword           controllers.web.UserController.recoveryPassword(id:Long ?= 0, mailId:Long ?= 0)
GET     /v1/web/user/confirmMail                controllers.web.UserController.confirmMailView(h:String ?= "0", m:String ?= "0")
GET     /v1/web/admin/notification/:id          controllers.web.NotificationController.sendView(id:Long)
POST    /v1/web/admin/notification/:id          controllers.web.NotificationController.send(id:Long)
GET     /v1/web/authorize                       controllers.web.AuthenticationController.authorizeView()
POST    /v1/web/authorize                       controllers.web.AuthenticationController.authorize()
GET     /v1/web/logoff                          controllers.web.AuthenticationController.logoff()
POST    /v1/web/register                        controllers.web.UserController.register()
GET     /v1/web/:login                          controllers.web.UserController.perfil(login: String)
POST    /v1/web/user/circle/join                controllers.web.UserController.joinCircle(login: String)