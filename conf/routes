# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)

# Mobile methods
POST    /v1/mobile/authorize            controllers.mobile.AuthenticationController.authorize()
POST    /v1/mobile/logoff               controllers.mobile.AuthenticationController.logoff()
POST    /v1/mobile/recoveryPassword     controllers.mobile.AuthenticationController.recoveryPassword()
POST    /v1/mobile/user/register        controllers.mobile.UserController.register()
POST    /v1/mobile/user/exclude         controllers.mobile.UserController.exclude()
POST    /v1/mobile/user/search          controllers.mobile.UserController.search()
POST    /v1/mobile/social/signUp        controllers.mobile.SocialController.signUp()
POST    /v1/mobile/wishlist/create      controllers.mobile.WishListController.create()
POST    /v1/mobile/wishlist/update      controllers.mobile.WishListController.update()
#POST    /v1/mobile/wishlist/reload      controllers.mobile.WishListController.reload()
POST    /v1/mobile/wishlist/list      controllers.mobile.WishListController.list()
POST    /v1/mobile/wishlist/listProducts      controllers.mobile.WishListController.getProductsByWishList()
POST    /v1/mobile/wishlist/delete      controllers.mobile.WishListController.delete()
POST    /v1/mobile/wishlist/addProduct      controllers.mobile.WishListController.addProductsWishList()
POST    /v1/mobile/wishlist/removeProduct      controllers.mobile.WishListController.removeProductsWishList()
POST    /v1/mobile/cdn/retrieve                 controllers.mobile.CDNController.retrieve()
POST    /v1/mobile/notification/register        controllers.mobile.NotificationController.register()
POST    /v1/mobile/notification/list            controllers.mobile.NotificationController.listActions()

# Web methods
GET     /v1/web/user/recoveryPassword           controllers.web.UserController.showRecoveryPassword(ts:Long ?= 0, h, m)
POST    /v1/web/user/recoveryPassword           controllers.web.UserController.recoveryPassword(id:Long ?= 0, mailId:Long ?= 0)
GET     /v1/web/admin/notification/:id          controllers.web.NotificationController.sendView(id:Long)
POST    /v1/web/admin/notification/:id          controllers.web.NotificationController.send(id:Long)